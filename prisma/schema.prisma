// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native"]
}

datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model User {
  // Use Clerk user id (e.g., "user_...") as primary key. No default cuid().
  id                String   @id
  email             String   @unique
  name              String?
  image             String?
  personalTeamId    String?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  // YouTube connection
  youtubeAccessToken  String?
  youtubeRefreshToken String?
  youtubeExpiresAt    DateTime?
  youtubeChannelId    String?
  youtubeChannelTitle String?

  // Team relationships
  ownedTeams      Team[]
  teamMembers     TeamMember[]
  sentInvites     TeamInvite[] @relation("InviterRelation")
  receivedInvites TeamInvite[] @relation("InviteeRelation")

  // Videos
  videos     Video[]
  uploadLock UploadLock?

  @@map("users")
}

model Team {
  id          String   @id @default(cuid())
  name        String
  description String?
  isPersonal  Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relationships
  owner   User   @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  ownerId String

  members TeamMember[]
  invites TeamInvite[]

  @@map("teams")
}

model TeamMember {
  id        String       @id @default(cuid())
  role      Role         @default(EDITOR)
  joinedAt  DateTime     @default(now())
  updatedAt DateTime     @updatedAt
  status    MemberStatus @default(ACTIVE)

  // Relationships
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String

  team   Team   @relation(fields: [teamId], references: [id], onDelete: Cascade)
  teamId String

  @@unique([userId, teamId])
  @@map("team_members")
}

model TeamInvite {
  id        String       @id @default(cuid())
  email     String
  role      Role         @default(EDITOR)
  status    InviteStatus @default(PENDING)
  token     String       @unique
  expiresAt DateTime
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt

  // Relationships
  team   Team   @relation(fields: [teamId], references: [id], onDelete: Cascade)
  teamId String

  inviter   User   @relation("InviterRelation", fields: [inviterId], references: [id], onDelete: Cascade)
  inviterId String

  invitee   User?   @relation("InviteeRelation", fields: [inviteeId], references: [id], onDelete: SetNull)
  inviteeId String?

  @@unique([email, teamId])
  @@map("team_invites")
}

model Video {
  id                String      @id @default(cuid())
  key               String
  filename          String
  contentType       String
  sizeBytes         Int
  uploadedAt        DateTime    @default(now())
  updatedAt         DateTime    @updatedAt
  status            VideoStatus @default(PROCESSING)
  requestedByUserId String?
  approvedByUserId  String?

  // Owner
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String

  // Optional associations
  teamId String?

  // Editable metadata
  description  String?
  visibility   String? // public | private | unlisted
  madeForKids  Boolean @default(false)
  thumbnailKey String?

  @@index([userId, uploadedAt])
  @@map("videos")
}

model UploadLock {
  id        String   @id @default(cuid())
  key       String
  metadata  String?  // JSON string to store upload metadata
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String @unique

  @@map("upload_locks")
}

// Removed legacy password reset model; Clerk manages auth

enum Role {
  ADMIN
  MANAGER
  EDITOR
}

enum InviteStatus {
  PENDING
  ACCEPTED
  REJECTED
  EXPIRED
}

enum MemberStatus {
  ACTIVE
  PAUSED
}

enum VideoStatus {
  PROCESSING // Initial state - being processed
  PENDING // Sent for publish (awaiting owner approval)
  PUBLISHED // Published/approved by owner
}
